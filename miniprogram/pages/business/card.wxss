/* pages/biases/card.wxss */

.page {
  height: 100%;
}

.loading {
  height: 100vh;
  width: 100vw;
  display: flex;
  align-items: center;
  justify-content: center;
}

.swiper {
  height: 100vh;
  width: 100vw;
  position: fixed;
  top: 0;
  left: 0;
  overflow: hidden;
  transform: translate3d(0, 0, 0);
}

.swiper-item {
  height: 100vh;
  background-color: white;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-evenly;
}

.article {
  display: flex;
  width: calc(100% - 64rpx);
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.article__title {
  font-size: 1.6rem;
  font-weight: bold;
  color: #36454F;
}

.article__subtitle {
  margin-top: 40rpx;
  font-size: 1.3rem;
  font-weight: lighter;
  color: #231f20;
}

.category {
  padding: 10rpx 0;
  border-top: 4rpx solid #eee;
  border-bottom: 4rpx solid #eee;
  width: calc(100% - 64rpx);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.category__title {
  font-weight: bolder;
  color: #231f20;
  font-size: 1.2rem;
}

.category__desc {
  margin-top: 16rpx;
  color: #7f8284;
}

.actions {
  position: absolute;
  bottom: 80rpx;
  left: 0rpx;
  margin-top: 48rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.actions button {
  border-radius: 48rpx;
  max-width: 300rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  color: white;
}

.actions .all-btn {
  border: 1rpx solid black;
  color: black;
  margin-left: 32rpx;
  margin-right: 16rpx;
}

.actions .share-btn {
  background-color: black;
  margin-right: 32rpx;
  margin-left: 16rpx;
}