/**index.wxss**/
.container {
  padding: 0rpx 0rpx;
}

.header {
  display: flex;
  padding: 40rpx 10rpx;
  text-align: center;
  flex-direction: column;
  align-items: center;
}

.header__icon {
  width: 128rpx;
  height: 128rpx;
}

.header__text {
  margin: 8rpx 0rpx;
  color: gray;
}

.item {
  background-color: white;
  display: flex;
  flex-direction: row;
  width: 100%;
  margin-bottom: 8px;
  align-items: center;
}

.item__title {
  margin-left: 8rpx;
  flex: 1;
}

.item__image {
  padding: 16rpx 16rpx;
  width: 72rpx;
  height: 72rpx;
}

.item__arrow {
  width: 48rpx;
  height: 48rpx;
}