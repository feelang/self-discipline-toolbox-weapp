/**index.wxss**/
.container {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

.header {
}

.header image {
  width: 100%;
  height: 100%;
}

.grid-container {
  display: grid;
  margin: 16rpx;
  grid-template-columns: 1fr 1fr;
  grid-gap: 8px;
}

.grid-item {
  background-color: white;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-radius: 16rpx;
}

.item__image {
  margin: 48rpx 0;
  width: 160rpx;
  height: 160rpx;
}

.item__title {
  text-align: center;
  margin-bottom: 48rpx;
}


.item__arrow {
  width: 48rpx;
  height: 48rpx;
}